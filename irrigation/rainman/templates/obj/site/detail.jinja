{% haml %}
-extends "base.jinja"
-import "obj/controller/macro.jinja" as c
-import "obj/feed/macro.jinja" as f
-import "obj/paramgroup/macro.jinja" as pg

-block title
	=site.name
-block content

	%h1 -> =site.name
	%table
		%tr
			%th -> var
			%td -> =site.var
		%tr
			%th -> Host
			%td -> =site.host
		%tr
			%th -> Port
			%td -> =site.port
		%tr
			%th -> Rate
			%td
				=site.rate
				mm/day (on an average day)
		%tr
			%th -> Rain Delay
			%td -> =site.rain_delay
	%div id="buttons"
		%a href="/site/{{site.id}}/edit"
			Edit
		=" ¦ "
		%a href="/site/{{site.id}}/delete"
			Delete

	%h2 -> Controllers
	=c.table(site.controllers.all())

	%div id="buttons_c"
		%a href="/site/{{site.id}}/new/controller"
			New Controller…

	%h2 -> Feeds
	=f.table(site.feed_meters.all())

	%div id="buttons_f"
		%a href="/site/{{site.id}}/new/feed"
			New Feed…

	%h2 -> Parameters
	=pg.table(site.param_groups.all())

	%div id="buttons_pg"
		%a href="/site/{{site.id}}/new/params"
			New Parameters…

{% endhaml %}
