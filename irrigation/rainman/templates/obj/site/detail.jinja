{% haml %}
-extends "base.jinja"
-import "obj/controller/macro.jinja" as c
-import "obj/feed/macro.jinja" as f
-import "obj/paramgroup/macro.jinja" as pg
-import "obj/history/macro.jinja" as h

-block title
	=site.name
-block content

	%div.main
		%h1 -> =site.name
		%div.content
			%table
				%tr
					%th -> var
					%td -> =site.var
				%tr
					%th -> Host
					%td -> =site.host
				%tr
					%th -> Port
					%td -> =site.port
				%tr
					%th -> Rate
					%td -> ="%.2f mm/day (on an average day)" % site.rate
				%tr
					%th -> Rain Delay
					%td -> =site.rain_delay

		%div.buttons#buttons
			%a href="/site/{{site.id}}/edit"
				Edit
			=" ¦ "
			%a href="/site/{{site.id}}/delete"
				Delete

;	%div.controllers
