{% extends "base.jinja" %}
{% import "obj/controller/macro.jinja" as c %}

{% block title %}{{ site.name }}{% endblock %}
{% block content %}

<h1>{{site.name }}</h1>
<table>
<tr><td>var</td><td>{{site.var}}</td></tr>
<tr><td>host</td><td>{{site.host}}</td></tr>
<tr><td>port</td><td>{{site.port}}</td></tr>
<tr><td>rate</td><td>{{site.rate}} mm/day (on an average day)</td></tr>
<tr><td>rain delay</td><td>{{site.rain_delay}}</td></tr>
</table>
<h2>Controllers</h2>
{{ c.table(site.controllers.all()) }}

{% endblock %}
