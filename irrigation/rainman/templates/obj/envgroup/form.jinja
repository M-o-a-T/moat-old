{% haml %}

-extends "base.jinja"
-block title
	-if envgroup is defined
		=envgroup.name
		=" â€“ edit"
	-else
		New Environment Table

-block content
	%h1
		-if envgroup is defined
			=envgroup.name
		-else
			=self.title()
	%form action="" method="post"
		-csrf_token
		%table
			-if envgroup is defined
				-set site=envgroup.site
			%tr
				%th -> Site
				%td
					%a href="/site/{{ site.id }}"
						=site.name
			=form.as_table()|safe
		%input type="submit" value="Save"

{% endhaml %}
