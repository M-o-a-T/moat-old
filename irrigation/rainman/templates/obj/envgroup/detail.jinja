{% haml %}
-extends "base.jinja"
-import "obj/envitem/macro.jinja" as ef
-import "obj/valve/macro.jinja" as v

-block title
	=envgroup.name

-block content
	%h1 -> =envgroup.name
	%table
		%tr
			%th -> comment
			%td -> =envgroup.comment
		%tr
			%th -> Site
			%td -> %a href="/site/{{ envgroup.site.id }}"
				=envgroup.site.name
		%tr
			%th -> Factor
			%td -> =envgroup.factor
		%tr
			%th -> Rain Stop
			%td -> ="Yes" if envgroup.rain else "No"

	%div id="buttons"
		%a href="/envgroup/{{envgroup.id}}/edit"
			Edit
		=" ¦ "
		%a href="/envgroup/{{envgroup.id}}/delete"
			Delete

	%h2 Contents
	=ef.table(envgroup.items.all(),False)
	%div id="buttons_ef"
		%a href="/envgroup/{{envgroup.id}}/new/envitem"
			New Entry…

	%div.valves
		%h2 -> Valves
		%div.content
			=v.table(envgroup.valves.all(), show_eg=False)
			%a href="/envgroup/{{envgroup.id}}/new/valve"
				Add valve


{% endhaml %}
