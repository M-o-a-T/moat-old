{% haml %}
-extends "base.jinja"
-import "obj/envitem/macro.jinja" as ef
-import "obj/valve/macro.jinja" as v
-import "obj/schedule/macro.jinja" as sc

-block title
	=envgroup.name

-block content
	%h1 -> =envgroup.name
	%table
		%tr
			%th -> Name
			%td -> =envgroup.name
		%tr
			%th -> Site
			%td -> %a href="/site/{{ envgroup.site.id }}"
				=envgroup.site.name
		%tr
			%th -> Comment
			%td -> =envgroup.comment
		%tr
			%th -> Factor
			%td -> =envgroup.factor
		%tr
			%th -> Rain Stop
			%td -> ="◉" if envgroup.rain else "–"

	%div id="buttons"
		%a href="/envgroup/{{envgroup.id}}/edit"
			Edit
		=" ¦ "
		%a href="/envgroup/{{envgroup.id}}/delete"
			Delete

	%h2 Contents
	=ef.table(envgroup.items.all(),False)
	%div id="buttons_ef"
		%a href="/envgroup/{{envgroup.id}}/new/envitem"
			New Entry…

	%div.Schedules
		%h2 -> Schedule
		%div.content
			=sc.table(envgroup.schedules.order_by("-start")[:5], show_valve=False,prefix="/envgroup/%d"%(envgroup.id,))

		%div.buttons#buttons_h
			%a href="/envgroup/{{envgroup.id}}/schedule"
				More…

	%div.valves
		%h2 -> Valves
		%div.content
			=v.table(envgroup.valves.all(), show_eg=False)
			%a href="/envgroup/{{envgroup.id}}/new/valve"
				Add valve

	%div.more
		%div.buttons
			%a href="/envgroup/{{envgroup.id}}/log"
				Log


{% endhaml %}
