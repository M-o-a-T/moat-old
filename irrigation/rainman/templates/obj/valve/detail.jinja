{% haml %}
-extends "base.jinja"

-block title
	=valve.name

-block content
	%h1 -> =valve.name
	%table
		%tr
			%th -> Comment
			%td -> =valve.comment
		%tr
			%th -> Controller
			%td -> %a href="/controller/{{ valve.controller.id }}"
				=valve.controller.name
		%tr
			%th -> Feed
			%td -> %a href="/feed/{{ valve.feed.id }}"
				=valve.feed.name
		%tr
			%th -> Parameters
			%td -> %a href="/params/{{ valve.param_group.id }}"
				=valve.param_group.name
		%tr
			%th -> Site
			%td -> %a href="/site/{{ valve.feed.site.id }}"
				=valve.feed.site.name
		-if valve.feed.site.id != valve.controller.site.id
			%tr
				%th -> Site (Controller)
				%td -> %a href="/site/{{ valve.controller.site.id }}"
					=valve.controller.site.name
		%tr
			%th -> Location
			%td -> =valve.location
		%tr
			%th -> var
			%td -> =valve.var
		%tr
			%th -> Verbosity
			%td -> =valve.verbose
		%tr
			%th -> Flow
			%td -> ="%.3f mm/sec" % valve.flow
		%tr
			%th -> Area
			%td -> ="%.1f m²" % valve.area
		%tr
			%th -> Shade
			%td -> =valve.shade
		%tr
			%th -> Runoff
			%td -> =valve.runoff
		%tr
			%th -> Max_level
			%td -> =valve.max_level
		%tr
			%th -> Start_level
			%td -> =valve.start_level
		%tr
			%th -> Stop_level
			%td -> =valve.stop_level
		%tr
			%th -> Level
			%td -> =valve.level
		%tr
			%th -> Time
			%td -> =valve.time

	%div id="buttons"
		%a href="/valve/{{valve.id}}/edit"
			Edit
		=" ¦ "
		%a href="/valve/{{valve.id}}/delete"
			Delete

{% endhaml %}
