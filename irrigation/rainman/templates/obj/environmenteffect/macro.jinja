{% haml %}

-macro table(enveffects,show_pg=True)
	%table
		%tr
			-if show_pg
				%th -> ParamGroup
			%th -> Factor
			%th -> Temp
			%th -> Wind
			%th -> Sun
		-for enveffect in enveffects.all()
			%tr
				-if show_pg
					%td
						%a href="/params/{{ enveffect.param_group.id }}"
							=enveffect.param_group.name
				%td
					%a href="/environ/{{ enveffect.id }}"
						="%.2f" % enveffect.factor
				%td -> ="%.2f" % enveffect.temp if enveffect.temp is not none else "–"
				%td -> ="%.2f" % enveffect.wind if enveffect.wind is not none else "–"
				%td -> ="%.2f" % enveffect.sun if enveffect.sun is not none else "–"

{% endhaml %}
