{% haml %}
-extends "base.jinja"
-import "obj/environmenteffect/macro.jinja" as ef

-block title
	=param_group.name

-block content
	%h1 -> =param_group.name
	%table
		%tr
			%th -> comment
			%td -> =param_group.comment
		%tr
			%th -> Site
			%td -> %a href="/site/{{ param_group.site.id }}"
				=param_group.site.name
		%tr
			%th -> Factor
			%td -> =param_group.factor
		%tr
			%th -> Rain Stop
			%td -> ="Yes" if param_group.rain else "No"

	%div id="buttons"
		%a href="/params/{{param_group.id}}/edit"
			Edit
		=" ¦ "
		%a href="/params/{{param_group.id}}/delete"
			Delete

	%h2 Parameters
	=ef.table(param_group.environment_effects.all(),False)
	%div id="buttons_ef"
		%a href="/params/{{param_group.id}}/new/environ"
			New Parameter…


{% endhaml %}
