{% haml %}

-macro table(schedules, user, show_valve=True, prefix="")
	%table
		%tr
			%th -> Start
			%th -> Duration
			%th -> End
			%th -> Running
			-if show_valve
				%th -> Valve
		-for schedule in schedules.all()
			%tr
				%td
					%a href="{{prefix}}/schedule/{{ schedule.id }}"
						=schedule.start|tz
				%td
					=schedule.duration
				%td
					=schedule.end|tz
				%td
					="◉" if schedule.seen else "–"
				-if show_valve
					%td
						-if user.profile.access_valve(schedule.valve)
							%a href="/valve/{{ schedule.valve.id }}"
								=schedule.valve.name
						-else
							=schedule.valve.name

{% endhaml %}
