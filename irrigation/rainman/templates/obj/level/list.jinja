{% haml %}

-extends "base.jinja"
-import "obj/level/macro.jinja" as lv
-import "obj/macro.jinja" as m

-block title
	Levels

-block content
	%h1
		-if valve is defined
			-set show_valve=False
			Levels for {{ valve.name }}
		-else
			-set show_valve=True
			All Levels

	=lv.table(level_list, show_valve=show_valve)

	-if not show_valve
		%div.buttons
			%a href="/valve/{{valve.id}}/new/level"
				Newâ€¦

	=m.pager(page_obj)

{% endhaml %}
