{% haml %}

-macro table(valves, show_valve=True)
	%table
		%tr
			%th -> Time
			%th -> Level
			%th -> Flow
			%th -> forced?
			-if show_valve
				%th -> Valve
		-for level in valves.all()
			%tr
				%td
					%a href="/level/{{ level.id }}"
						=level.time|tz
				%td -> ="%.2f" % level.level
				%td -> ="%.2f" % level.flow
				%td -> ="◉" if level.forced else "–"
				-if show_valve
					%td
						%a href="/valve/{{ level.valve.id }}"
							=level.valve.name
					

{% endhaml %}
