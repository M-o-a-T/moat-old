{% haml %}
-extends "base.jinja"

-block title
	=history

-block content
	%h1 -> =history
	%table
		%tr
			%th -> Site
			%td -> %a href="/site/{{ history.site.id }}"
				=history.site.name
		%tr
			%th -> Time
			%td -> =history.time|tz
		%tr
			%th -> Rain
			%td -> ="%.2f" % history.rain
		%tr
			%th -> Feed
			%td -> ="%.2f" % history.feed
		%tr
			%th -> Temp
			%td -> ="%.2f" % history.temp if history.temp is not none else "–"
		%tr
			%th -> Wind
			%td -> ="%.2f" % history.rain if history.wind is not none else "–"
		%tr
			%th -> Sun
			%td -> ="%.2f" % history.sun if history.sun is not none else "–"

	%div.buttons_h
		-if prev_h
			%a href="/history/{{ prev_h.id }}"
				Previous
		-if next_h and prev_h
			=" ¦ "
		-if next_h
			%a href="/history/{{ next_h.id }}"
				Next

{% endhaml %}
