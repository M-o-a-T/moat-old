{% haml %}

-extends "base.jinja"
-import "obj/history/macro.jinja" as h

-block title
	History

-block content
	-if site is defined
		-set show_site=False
	-else
		-set show_site=True

	=h.table(history_list, show_site=show_site)

	%div.pagination
		%span.step-links
			-if page_obj.has_next()
				%a href="?page={{ page_obj.next_page_number() }}"
					earlier
				=" ¦ "

		%span.current
			Page {{ page_obj.number }} of {{ page_obj.paginator.num_pages }}.

		%span.step-links
			-if page_obj.has_previous()
				=" ¦ "
				%a href="?page={{ page_obj.previous_page_number() }}"
					later

{% endhaml %}
