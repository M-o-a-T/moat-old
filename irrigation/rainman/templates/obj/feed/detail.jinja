{% haml %}
-extends "base.jinja"
-import "obj/valve/macro.jinja" as v

-block title
	=feed.name

-block content
	%h1 -> =feed.name
	%table
		%tr
			%th -> var
			%td -> =feed.var
		%tr
			%th -> Site
			%td -> %a href="/site/{{ feed.site.id }}"
				=feed.site.name
		%tr
			%th -> Flow
			%td -> ="%.3f mm/sec" % feed.flow
		%tr
			%th -> max flow wait time
			%td -> =feed.max_flow_wait

	%div id="buttons"
		%a href="/feed/{{feed.id}}/edit"
			Edit
		=" Â¦ "
		%a href="/feed/{{feed.id}}/delete"
			Delete
	%h2 -> Valves
	=v.table(feed.valves.all())
	%a href="/site/{{feed.site.id}}/new/valve"
		Add valve

{% endhaml %}
