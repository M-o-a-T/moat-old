{% haml %}
-extends "base.jinja"
-import "obj/valve/macro.jinja" as v
-import "obj/schedule/macro.jinja" as sc

-block title
	=feed.name

-block content
	%div.main
		%h1 -> =feed.name
		%div.content
			%table
				%tr
					%th -> Name
					%td -> =feed.name
				%tr
					%th -> Site
					%td -> %a href="/site/{{ feed.site.id }}"
						=feed.site.name
				-if feed.comment
					%tr
						%th -> Comment
						%td -> =feed.comment
				%tr
					%th -> var
					%td -> =feed.var
				%tr
					%th -> Flow
					%td -> ="%.3f l/sec" % feed.flow
				%tr
					%th -> max flow wait time
					%td -> =feed.max_flow_wait

		%div.buttons#buttons
			%a href="/feed/{{feed.id}}/edit"
				Edit
			=" ¦ "
			%a href="/feed/{{feed.id}}/delete"
				Delete
	
	%div.valves
		%h2 -> Valves
		=v.table(feed.valves.all(), show_feed=False)

		%a href="/feed/{{feed.id}}/new/valve"
			Add valve

	%div.schedule
		%h2 -> Schedule
		%div.content
			=sc.table(feed.schedules.order_by("-start")[:5], prefix="/feed/%d"%(feed.id,))

		%div.buttons#buttons_sc
			%a href="/feed/{{feed.id}}/schedule"
				More…

{% endhaml %}
