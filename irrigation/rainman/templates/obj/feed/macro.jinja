{% haml %}

-macro table(feeds, show_site=True)
	%table
		%tr
			%th -> Name
			-if show_site
				%th -> Site
			%th -> Comment
			%th -> On
		-for feed in feeds.all()
			%tr
				%td
					%a href="/feed/{{ feed.id }}"
						=feed.name
				-if show_site
					%td
						%a href="/site/{{ feed.site.id }}"
							=feed.site.name
				%td -> =feed.comment
				%td -> ="–" if feed.disabled else "◉"


{% endhaml %}
