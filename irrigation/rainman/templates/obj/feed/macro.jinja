{% haml %}

-macro table(feeds, show_site=True)
	%table
		%tr
			%th -> Name
			-if show_site
				%th -> Site
		-for feed in feeds.all()
			%tr
				%td
					%a href="/feed/{{ feed.id }}"
						=feed.name
				-if show_site
					%td
						%a href="/site/{{ feed.site.id }}"
							=feed.site.name

{% endhaml %}
