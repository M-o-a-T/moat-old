{% haml %}

-extends "base.jinja"
-block title
	-if feed is defined
		=feed.name
	-else
		New Feed

-block content
	%h1
		=self.title()
	%form action="" method="post"
		-csrf_token
		%table
			-if feed is defined
				-set site=feed.site
			-else
				-set site=form.site
			%tr
				%td
					Site
				%td
					%a href="/site/{{ site.id }}"
						=site.name
			=form.as_table()|safe
		%input type="submit" value="Save"

{% endhaml %}
