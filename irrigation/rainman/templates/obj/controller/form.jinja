{% haml %}

-extends "base.jinja"
-block title
	-if controller is defined
		=controller.name
	-else
		New Controller

-block content
	%h1
		=self.title()
	%form action="" method="post"
		-csrf_token
		%table
			-if controller is defined
				-set site=controller.site
			-else
				-set site=form.site
			%tr
				%td
					Site
				%td
					%a href="/site/{{ site.id }}"
						=site.name
			=form.as_table()|safe
		%input type="submit" value="Save"

{% endhaml %}
