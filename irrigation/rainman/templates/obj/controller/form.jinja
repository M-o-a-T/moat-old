{% extends "base.jinja" %}
{% block title %}{% if controller is defined %}{{ controller.name }}{% else %}New Controller{% endif %}{% endblock %}
{% block content %}

<h1>{{ self.title() }}</h1>
<form action="" method="post">
{% csrf_token %}
<table>
{% if controller is defined %}{% set site=controller.site %}{% else %}{% set site=form.site %}{% endif %}
<tr><td>Site</td><td><a href="/site/{{ site.id }}">{{ site.name }}</a></td></tr>
{{ form.as_table()|safe }}
</table>
<input type="submit" value="Submit" />
</form>

{% endblock %}
