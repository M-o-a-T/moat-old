{% haml %}
-extends "base.jinja"
-import "obj/valve/macro.jinja" as v

-block title
	=controller.name

-block content
	%div.main
		%h1 -> =controller.name
		%div.content
			%table
				%tr
					%th -> Site
					%td -> %a href="/site/{{ controller.site.id }}"
						=controller.site.name
				%tr
					%th -> Comment
					%td -> =controller.comment
				%tr
					%th -> var
					%td -> =controller.var
				%tr
					%th -> Location
					%td -> =controller.location
				%tr
					%th -> max On
					%td -> =controller.max_on

		%div.buttons#buttons
			%a href="/controller/{{controller.id}}/edit"
				Edit
			=" Â¦ "
			%a href="/controller/{{controller.id}}/delete"
				Delete
	%div.valves
		%h2 -> Valves
		%div.content
			=v.table(controller.valves.all())
			%a href="/site/{{controller.site.id}}/new/valve"
				Add valve

	%div.more
		%div.buttons
			%a href="/controller/{{controller.id}}/log"
				Log

{% endhaml %}
