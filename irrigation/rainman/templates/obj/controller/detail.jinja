{% haml %}
-extends "base.jinja"
-import "obj/valve/macro.jinja" as v

-block title
	=controller.name

-block content
	%h1
		=controller.name
	%table
		%tr
			%td
				var
			%td
				=controller.var
		%tr
			%td
				Site
			%td
				%a href="/site/{{ controller.site.id }}"
					=controller.site.name
		%tr
			%td
				Location
			%td
				=controller.location
		%tr
			%td
				max On
			%td
				=controller.max_on

	%h2
		Valves
	=v.table(controller.valves.all())
	%div id="buttons"
		%a href="/controller/{{controller.id}}/edit"
