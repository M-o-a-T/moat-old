{% haml %}
-extends "base.jinja"
-import "obj/valve/macro.jinja" as v
-import "obj/schedule/macro.jinja" as sc

-block title
	=controller.name

-block content
	%div.main
		%h1 -> =controller.name
		%div.content
			%table
				%tr
					%th -> Site
					%td -> %a href="/site/{{ controller.site.id }}"
						=controller.site.name
				%tr
					%th -> Comment
					%td -> =controller.comment
				%tr
					%th -> var
					%td -> =controller.var
				%tr
					%th -> Location
					%td -> =controller.location
				%tr
					%th -> max On
					%td -> =controller.max_on

		%div.buttons#buttons
			%a href="/controller/{{controller.id}}/edit"
				Edit
			=" ¦ "
			%a href="/controller/{{controller.id}}/delete"
				Delete
	%div.valves
		%h2 -> Valves
		%div.content
			=v.table(controller.valves.all(), show_controller=False)
			%a href="/controller/{{controller.id}}/new/valve"
				Add valve

	%div.schedule
		%h2 -> Schedule
		%div.content
			=sc.table(controller.schedules.order_by("-start")[:5],prefix="/controller/%d"%(controller.id,))

		%div.buttons#buttons_sc
			%a href="/controller/{{controller.id}}/schedule"
				More…

	%div.more
		%div.buttons
			%a href="/controller/{{controller.id}}/log"
				Log
			=" ¦ "
			%a href="/controller/{{controller.id}}/history"
				History

{% endhaml %}
