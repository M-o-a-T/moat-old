{% haml %}
-extends "base.jinja"
-import "obj/valve/macro.jinja" as v

-block title
	=controller.name

-block content
	%h1 -> =controller.name
	%table
		%tr
			%th -> var
			%td -> =controller.var
		%tr
			%th -> Site
			%td -> %a href="/site/{{ controller.site.id }}"
				=controller.site.name
		%tr
			%th -> Location
			%td -> =controller.location
		%tr
			%th -> max On
			%td -> =controller.max_on

	%div id="buttons"
		%a href="/controller/{{controller.id}}/edit"
			Edit
		=" Â¦ "
		%a href="/controller/{{controller.id}}/delete"
			Delete
	%h2 -> Valves
	=v.table(controller.valves.all())
	%a href="/site/{{controller.site.id}}/new/valve"
		Add valve

{% endhaml %}
