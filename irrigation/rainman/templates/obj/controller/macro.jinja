{% haml %}

-macro table(controllers, show_site=True)
	%table
		%tr
			%th -> Name
			-if show_site
				%th -> Site
			%th -> Comment
		-for controller in controllers.all()
			%tr
				%td
					%a href="/controller/{{ controller.id }}"
						=controller.name
				-if show_site
					%td
						%a href="/site/{{ controller.site.id }}"
							=controller.site.name
				%td
					=controller.comment

{% endhaml %}
